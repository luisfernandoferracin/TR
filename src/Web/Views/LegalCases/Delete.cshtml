    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CaseNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CaseNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CourtName)
        </dt>
        <dd class="col-sm-9">
